<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Learn_.NET_MAUI.NewPage1"
             Title="NewPage1">
    <Grid Padding="10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <FlexLayout Grid.Row="0" Grid.Column="0" JustifyContent="SpaceBetween" Wrap="Wrap">
            <Frame FlexLayout.Grow="1">
                <FlexLayout AlignItems="Center">
                    <Image Source="dotnet_bot.png" HeightRequest="50" ></Image>
                    <Label Text="Level: Noobie" FlexLayout.AlignSelf="End"></Label>
                    <Label Text="Welcome back, Hautekeete Daan! You can do it, believe in yourself!" FlexLayout.Grow="1" HorizontalOptions="Center"></Label>
                    
                </FlexLayout>
            </Frame>

        </FlexLayout>
    </Grid>

    
</ContentPage>