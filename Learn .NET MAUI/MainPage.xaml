<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Learn_.NET_MAUI.MainPage">

        <FlexLayout JustifyContent="Center" AlignItems="Center" Direction="Column" VerticalOptions="CenterAndExpand">
            <Image Source="dotnet_bot.png" Margin="0,10"/>

            <Label Text="Welcome, please login!" HorizontalTextAlignment="Center" Margin="0,10"/>
            <Entry x:Name="txtName" Placeholder="enter your name"  HorizontalOptions="Center" Margin="0,10"/>
            <Button x:Name="BtnSubmit" Text="Submit Name" HorizontalOptions="CenterAndExpand" Padding="20" CornerRadius="30" Pressed="BtnSubmit_Pressed"/>
        </FlexLayout>

</ContentPage>
